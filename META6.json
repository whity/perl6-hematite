{
    "perl"         : "6.d",
    "name"         : "Hematite",
    "license"      : "Artistic-2.0",
    "version"      : "0.7.1",
    "description"  : "A simple web framework for raku",
    "depends" : [
        "Crust",
        "Template::Mustache",
        "MIME::Types",
        "Logger",
        "HTTP::Status",
        "Cookie::Baker",
        "JSON::Fast"
    ],
    "test-depends" : [
        "HTTP::UserAgent"
    ],
    "provides"     : {
        "Hematite"                                   : "lib/Hematite.rakumod",
        "Hematite::App"                              : "lib/Hematite/App.rakumod",
        "Hematite::Context"                          : "lib/Hematite/Context.rakumod",
        "Hematite::Handler"                          : "lib/Hematite/Handler.rakumod",
        "Hematite::Request"                          : "lib/Hematite/Request.rakumod",
        "Hematite::Response"                         : "lib/Hematite/Response.rakumod",
        "Hematite::Route"                            : "lib/Hematite/Route.rakumod",
        "Hematite::Router"                           : "lib/Hematite/Router.rakumod",
        "Hematite::Templates"                        : "lib/Hematite/Templates.rakumod",
        "Hematite::Middleware::Static"               : "lib/Hematite/Middleware/Static.rakumod",
        "X::Hematite"                                : "lib/X/Hematite.rakumod",
        "X::Hematite::Exception"                     : "lib/X/Hematite/Exception.rakumod",
        "X::Hematite::DetachException"               : "lib/X/Hematite/DetachException.rakumod",
        "X::Hematite::HaltException"                 : "lib/X/Hematite/HaltException.rakumod",
        "X::Hematite::TemplateNotFoundException"     : "lib/X/Hematite/TemplateNotFoundException.rakumod"
    },
    "authors"      : [ "André Brás" ],
    "support"      : { "source"   : "https://github.com/whity/raku-hematite.git" }
}
